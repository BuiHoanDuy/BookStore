
@{
    ViewBag.Title = "ProductDetails";
    Layout = "~/Views/Shared/layout.cshtml";
}

    <h1>@Model.Tensach</h1>
<div class="product-details">
    <div class="product-image">
        <img src="~/Content/image/@Model.Anhbia" alt="@Model.Tensach" />
    </div>
    <div class="product-info">
        <p><strong>Giá bán:</strong> @Model.Giaban.ToString("C")</p>
        <p><strong>Mô tả:</strong> @Model.Mota</p>
        <p><strong>Nhà xuất bản:</strong> @Model.NHAXUATBAN.TenNXB</p>
        <p><strong>Chủ đề:</strong> @Model.CHUDE.TenChuDe</p>
    <button style="background-color: orangered; color:aliceblue"><strong>Mua ngay</strong></button>
    </div>
</div>