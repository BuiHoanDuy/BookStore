
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/layout.cshtml";
}

<table align="center">
    <h1 style="text-align:center; color: yellow">ĐĂNG NHẬP</h1>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        <!-- Hiển thị thông báo lỗi đăng nhập -->
        if (!String.IsNullOrEmpty(ViewBag.Thongbao))
        {
            <div style="color:red;">@ViewBag.Thongbao</div>
        }

        <tr style="height:40px">
            <td align="right"> Tên đăng nhập:</td>
            <td>
                <!-- Giữ lại giá trị đã nhập trong ô tài khoản -->
                @Html.TextBox("TenDN", (string)ViewBag.TenDN)
                @ViewData["Loi1"]
            </td>
        </tr>
        <tr style="height:40px">
            <td align="right"> Mật khẩu:</td>
            <td>
                @Html.Password("Matkhau")
                @ViewData["Loi2"]
            </td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td>
                <input type="submit" value="Đăng nhập" />
            </td>
        </tr>

        <tr style="height:40px">
            <td>Nếu chưa có tài khoản thì hãy <a href="/User/Register" style="color: red"> Đăng ký </a>  tại đây</td>
        </tr>
    }
</table>
